@model PokeList.Models.UserPokemon

@{
    ViewData["Title"] = "Delete";
}
    
    <div class="box">
        <h3>Are you sure you want to release this Pokemon?</h3>
        <h2>
            @Html.DisplayFor(model => model.Pokemon.PokemonName)
        </h2>
        <h3>Date Caught:</h3>
        <h3>@Html.DisplayFor(model => model.TimeStamp)</h3>
        <img class="pokeImage" src=@Html.DisplayFor(model => model.Pokemon.Image)>


        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Release Pokemon" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
